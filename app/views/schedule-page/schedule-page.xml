<Page loaded="pageLoaded">

    <Page.actionBar>
        <ActionBar title="Schedule">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" />
        </ActionBar>
    </Page.actionBar>

    <ScrollView class="wall">
        <Repeater items="{{ data }}">
            <Repeater.itemTemplate>
                <StackLayout class="day-schedule">
                    <Label class="day-schedule-date" text="{{ date }}" />
                    <Repeater items="{{ events }}">
                        <Repeater.itemTemplate>
                            <GridLayout class="row-card" columns="2*, 5*" id="{{ id }}" block="{{ block }}" tap="onTap">
                                <GridLayout class="row-card-time" col="0" rows="*,*">
                                    <Label row="0" text="{{ sTime }}" />
                                    <Label row="1" text="{{ eTime }}" />
                                </GridLayout>
                                <StackLayout class="row-card-event" col="1">>
                                    <Label class="row-card-title" text="{{ title }}" />
                                    <Label class="row-card-location" textWrap="true" text="{{ location }}" />
                                </StackLayout>
                            </GridLayout>
                        </Repeater.itemTemplate>
                    </Repeater>
                </StackLayout>
            </Repeater.itemTemplate>
        </Repeater>
    </ScrollView>
</Page>