<Page navigatedTo="onNavigatedTo">
    <ScrollView class="wall">
        <StackLayout class="block">
            <Label class="blockTitle" text="{{ title }}" />
            <Label class="blockDate" text="{{ date }}" />
            <Repeater items="{{ data }}"> 
                <Repeater.itemTemplate>
                    <StackLayout class="row-card">
                        <Label class="row-card-title" text="{{ name }}" />
                        <Label class="row-card-author" isWorkshop="{{ isWorkshop }}" text="{{ author }}" />
                        <Label class="row-card-description" isWorkshop="{{ isWorkshop }}" textWrap="true" text="{{ description }}" />
                        <Label class="row-card-location" text="{{ location }}" />
                    </StackLayout>
                </Repeater.itemTemplate>
            </Repeater>
        </StackLayout>
    </ScrollView>
</Page>